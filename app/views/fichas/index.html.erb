<div class="row">
  <div class="col-sm-10">
    <h1>Fichas</h1>
  </div>
  <div class="col-sm-2">
    <button class="mybtn">
      <%= link_to fichas_path(format: "csv"), class:"mybtn" do %>
      <i class="fa fa-file-excel-o  fa-3x"></i>
      <% end %>
    </button>
  </div>
</div>

<div class="row">
  <%= render 'fichas/table' %>
  <div class="col-sm-2 col-xs-4">
    <%= link_to new_ficha_path do %>
    <div class="button">
      <i class="fa fa-file-text-o"></i><br>
      Nueva Ficha
    </div>
    <% end %>
  </div>

</div>

