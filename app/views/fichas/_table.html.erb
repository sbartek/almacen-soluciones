<table class="table table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Codigo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fichas.each do |ficha| %>
      <tr>
        <td><%= link_to ficha.nombre, ficha %></td>
        <td><%= ficha.codigo %></td>
        <td>
          <%= link_to ficha do %>
          <i class="fa fa-eye"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_ficha_path(ficha) do %>
          <i class="fa fa-pencil-square-o"></i>
          <% end %>
        </td>
        <td>
          <%= link_to ficha, method: :delete, data: { confirm: 'Â¿Seguro?' } do %>
          <i class="fa fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
