<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        Ficha de material 
        <h4> <%= @ficha.nombre %> </h4>
      </div>
      <div class="panel-body">
        <p>
          <strong>Codigo:</strong>
          <%= @ficha.codigo %>
        </p>
        <p>
          <strong>Importancia:</strong>
          <%= @ficha.importancia %>
        </p>
        <p>
          <strong>Unidad:</strong>
          <%= @ficha.unidad %>
        </p>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        Stock
      </div>
      <div class="panel-body">
        <p>
          <strong>Cantidad total en Stock:</strong>
          <%= @ficha.cantidad_total %>
        </p>
        <%= render 'materials/table' %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        Costes
      </div>
      <div class="panel-body">
        <p>
          <strong>Precio compra Soluciones:</strong>
          <%= @ficha.pc_soluciones %> €
        </p>
        <p>
          <strong>Costes DDP Saema:</strong>
          <%= @ficha.ddp_saema %> $
        </p>
      </div>
    </div>
        <div class="panel panel-default">
      <div class="panel-heading">
        Categorías
      </div>
      <div class="panel-body">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th>
                subfamilia/familia/unidad de negocio
              </th>
              <th>
              </th>
            </tr>
          </thead>
          <% @ficha.subfamilias.each do |sf| %>
          <tr>
            <td>
              <%= sf.nombre_completo  %>
            </td>
            <td>
              <button type="button" class="btn btn-default">
                <%= link_to 'Eliminar', controler: "fichas", action: "delete_subfamilia", subfamilia_id: sf.id %>
              </button>
          </tr>
          <% end %>
          <tr>
            <%= form_tag({controller: "fichas", action: "add_subfamilia"}, method: "post") do %>
            <td>
              <%= select_tag("subfamilia_id", 
                  options_for_select(Subfamilia.all.collect {|sf| [sf.nombre_completo, sf.id]}), 
                  class:"form-control")  %>
            </td>
            <td>
              <%= submit_tag("Añadir", class: "btn btn-default") %>
            </td>
            <% end %>
          </tr>
        </table>
        

      </div>
    </div>

  </div>
</div>

<div class="row">
  <div class="col-md-3 col-xs-4">
    <%= link_to edit_ficha_path(@ficha) do %>
    <div class="button">
      <i class="fa fa-file-text-o"></i><br>
      Editar
        </div>
    <% end %>
  </div>
</div>
