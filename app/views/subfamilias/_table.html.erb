<table class="table table-condensed">
<thead>
    <tr>
      <th>Subfamilia</th>
      <th>Familia</th>
      <th>Unidad de negocio</th>
      <th colspan="3"></th>
    </tr>
</thead>

<tbody>
  <% @subfamilias.each do |subfamilia| %>
  <tr>
    <td><%= link_to subfamilia.nombre, subfamilia %></td>
    <td><%= link_to subfamilia.familia.nombre, subfamilia.familia %></td>
	  <td><%= link_to subfamilia.familia.negocio_unidad.nombre, subfamilia.familia.negocio_unidad %></td>
	  <td>
      <%= link_to subfamilia do %>
      <i class="fa fa-eye"></i>
      <% end %>
    </td>
    <td>
      <%= link_to edit_subfamilia_path(subfamilia) do %>
      <i class="fa fa-pencil-square-o"></i>
      <% end %>
    </td>
    <td><%= link_to subfamilia, method: :delete, data: { confirm: 'Â¿Seguro?' } do %>
      <i class="fa fa-trash"></i>
          <% end %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
