<%= bootstrap_form_for(@solicitud) do |f| %>
<div class="form-group">
  <% if @solicitud.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@solicitud.errors.count, "error") %> prohibited this solicitud from being saved:</h2>
      <ul>
      <% @solicitud.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.date_select :fecha %>
  </div>
  <div class="field">
    <%= f.select :proyecto_id, Proyecto.all.map{|p| [p.nombre, p.id]}  %>
  </div>
  <div class="field">
    <%= f.select :usuario_id, Usuario.all.map{|u| [u.nombre, u.id]}, label: "Solicitante" %>
  </div>
  <div class="field">
    <%= f.text_area :descripcion, :rows => 13 %>
  </div>
  <div class="field">
    <%= f.select :prioridad, Solicitud::PRIORIDADES %>
  </div>
  <div class="field">
    <%= f.date_select :fecha_limite %>
  </div>
  <div class="field">
    <%= f.text_area :notas %>
  </div>
  <div class="field">
    <%= f.select :categoria, Solicitud::CATEGORIAS %>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>
