<table class="table table-condensed">
  <thead>
    <tr>
      <th>Ficha</th>
      <th>Ubicacion</th>
      <th>Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.ficha.nombre %></td>
        <td><%= material.ubicacion.codigo %></td>
        <td><%= material.cantidad %></td>
        <td>
          <%= link_to material do %>
          <i class="fa fa-eye"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_material_path(material) do %>
          <i class="fa fa-pencil-square-o"></i>
          <% end %>
        </td>
        <td><%= link_to material, method: :delete, data: { confirm: 'Â¿Seguro?' } do %>
          <i class="fa fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
