                <%= usuario_actual.nombre %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Perfil", usuario_actual %></li>
                <li><%= link_to "Actualizar", edit_usuario_path(usuario_actual) %></li>
                <li><%= link_to "Usuarios", '#' %></li>
                <li class="divider"></li>
                <li><%= link_to "Cerrar sesiÃ³n", signout_path, method: "delete" %></li>
