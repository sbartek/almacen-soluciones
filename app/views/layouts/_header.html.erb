            <li>
              <%= link_to "Accede", signin_path %>
            </li>
            <% end %>
          </ul>

          <%= form_tag(fichas_path, method:'get', class: "navbar-form navbar-right", id:"search_fichas") do %>
          <div class="form-group">
            <%= text_field_tag :search_fichas, value=nil, class:"form-control", placeholder: "Buscar fichas" %>
          </div>
          <button type="submit" class="btn btn-default" id="buscar">
	          <i class="fa fa-search"></i>
	        </button>
        <% end %>
        
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
