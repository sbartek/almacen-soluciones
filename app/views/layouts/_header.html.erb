        <%= link_to "ApPM", root_path, class:"navbar-brand", title:"Inicio" %>
      </div>
      
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-left">
